<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="1dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/iv_card"
        android:layout_width="150dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_height="100dp"
        android:paddingRight="15dp"
        android:paddingLeft="10dp"
        android:src="@null"/>


    <TextView
        android:textColor="@color/primaryTextColor"
        android:layout_toRightOf="@+id/iv_card"
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="16sp"/>

    <TextView
        android:textColor="@color/primaryColor"
        android:layout_toRightOf="@+id/iv_card"
        android:layout_above="@+id/vw_divider"
        android:id="@+id/tv_bairro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="12sp"/>
    <TextView
        android:textColor="@color/primaryColor"
        android:id="@+id/tv_recompensa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/iv_card"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <View
        android:id="@+id/vw_divider"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="@color/textAndIconsColor"
        android:layout_below="@+id/iv_card"
        android:layout_height="1dp" />
</RelativeLayout>

</android.support.v7.widget.CardView>