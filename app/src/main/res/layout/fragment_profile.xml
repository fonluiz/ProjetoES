<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projetoes.projetoes.Fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/head2"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_profile"
                        style="@style/imageHeader"
                        android:src="@drawable/ic_no_picture" />
                </LinearLayout>


                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_inside"
                    android:text="Username"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/display1" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/address_info_layout"
                    style="@style/profile_layouts">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_info_type"
                            android:text="Cidade" />

                        <TextView
                            android:id="@+id/user_city"
                            style="@style/profile_information"
                            android:text="Campina Grande" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_info_type"
                            android:layout_marginTop="@dimen/margin_inside"
                            android:text="Bairro" />

                        <TextView
                            android:id="@+id/user_bairro"
                            style="@style/profile_information"
                            android:text="Meu bairro" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/profile_info_type"
                            android:layout_marginTop="@dimen/margin_inside"
                            android:text="Rua" />

                        <TextView
                            android:id="@+id/user_street"
                            style="@style/profile_information"
                            android:text="Meu endereÃ§o" />
                    </LinearLayout>


                </LinearLayout>

                <View style="@style/divider_style" />

                <LinearLayout
                    android:id="@+id/contact_info_layout"
                    style="@style/profile_layouts">

                    <TextView
                        style="@style/profile_info_type"
                        android:text="Telefone" />

                    <TextView
                        android:id="@+id/user_phone"
                        style="@style/profile_information"
                        android:text="Telefone" />


                    <TextView
                        style="@style/profile_info_type"
                        android:layout_marginTop="@dimen/margin_inside"
                        android:text="Email" />

                    <TextView
                        android:id="@+id/user_email"
                        style="@style/profile_information"
                        android:text="email@example.com" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/user_settings_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/margin_inside"
        android:layout_marginRight="@dimen/fab_margin"
        android:src="@mipmap/ic_edit_profile" />

</FrameLayout>
