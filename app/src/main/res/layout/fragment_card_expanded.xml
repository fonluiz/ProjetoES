<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projetoes.projetoes.Fragments.CardExpanded">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <ImageView
                   android:id="@+id/image_profile"
                   style="@style/imageHeader" />

               <LinearLayout
                   style="@style/card_layouts">

                   <TextView
                       android:id="@+id/title"
                       style="@style/profile_information"
                       android:text="Título" />


               </LinearLayout>

               <View style="@style/divider_style" />

               <LinearLayout
                   style="@style/card_layouts">


                   <TextView
                       style="@style/profile_info_type"
                       android:text="Categoria" />


                   <TextView
                       android:id="@+id/category"
                       style="@style/profile_information"
                       android:layout_width="match_parent"
                       android:gravity="right"
                       android:text="categoria"/>


               </LinearLayout>

               <View style="@style/divider_style" />

               <LinearLayout
                   style="@style/card_layouts">


                   <TextView
                       style="@style/profile_info_type"
                       android:text="Local" />


                   <TextView
                       android:id="@+id/location"
                       style="@style/profile_information"
                       android:layout_width="match_parent"
                       android:gravity="right"
                       android:text="local"/>


               </LinearLayout>

               <View style="@style/divider_style" />

               <LinearLayout
                   style="@style/card_layouts">


                   <TextView
                       style="@style/profile_info_type"
                       android:text="Data" />


                   <TextView
                       android:id="@+id/date"
                       style="@style/profile_information"
                       android:layout_width="match_parent"
                       android:gravity="right"
                       android:text="data"/>


               </LinearLayout>

               <View style="@style/divider_style" />

               <LinearLayout
                   android:id="@+id/reward_field_container"
                   style="@style/card_layouts">


                   <TextView
                       style="@style/profile_info_type"
                       android:text="Recompensa" />


                   <TextView
                       android:id="@+id/reward_field"
                       style="@style/profile_information"
                       android:layout_width="match_parent"
                       android:gravity="right"
                       android:text="recompensa"/>

               </LinearLayout>

               <View style="@style/divider_style" />

               <LinearLayout
                   style="@style/card_layouts"
                   android:orientation="vertical">


                   <TextView
                       style="@style/profile_info_type"
                       android:text="Descrição" />


                   <TextView
                       android:id="@+id/description_field"
                       style="@style/profile_information"
                       android:layout_width="match_parent"
                       android:paddingRight="@dimen/default_margin"
                       android:paddingLeft="@dimen/default_margin"
                       android:text="descrição"/>

               </LinearLayout>

               <View style="@style/divider_style" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center">

               <Button
                   android:id="@+id/report_btn"
                   style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="@dimen/margin_inside"
                   android:background="@android:drawable/btn_default"
                   android:text="Achei/perdi o objeto" />
           </LinearLayout>

       </LinearLayout>


   </ScrollView>

</FrameLayout>
